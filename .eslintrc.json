{
  "env": {
    "shared-node-browser": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "warn",
      2,
      { "VariableDeclarator": 2 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "valid-jsdoc": [
      "error"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-inline-comments": "error",
    "semi-spacing": "error"
  }
}
